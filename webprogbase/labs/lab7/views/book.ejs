<body>
    <% include partials/header %>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <a href="books/garry.html"><img src= "data:jpg;base64,<%=book.image.toString('base64')%>" alt="Garry Potter" style="max-height: 450px; max-width: 450px;border-radius: 25px;"></a>
                </div>
                <div class="col-md-4 col-md-offset-right-2">
                    <h1 style=" font-size: 65px;color: white;text-shadow: 0.25cm 0.25cm 0.25cm #000000;">
                        <%=book.name %>
                    </h1>
                    <h3>
                        Автор -
                        <%= book.authorName %>
                            <%= book.authorSurname %><br> Язык издания -
                                <%= book.language %><br> Количество страниц -
                                    <%= book.pages %><br> Год выпуска -
                                        <%= book.year %><br> Дата добавления -
                                            <%= book.date %><br>
                    </h3>
                    <hr>
                    <%if(user.role === "admin"){ %>
                        <form action="/books/delete/<%=book.id %>" method="POST">
                            <input class="btn btn-primary" type="submit" value="Delete">
                        </form>
                        <% } %>
                </div>

                <div class="container">
                    <div class="col-md-2 col-md-offset-5">
                        <h2 style=" font-size: 45px;  color: #030202;text-shadow: 0.25cm 0.25cm 0.25cm #545353;">Описание</h2>
                    </div>
                </div>
                <div class="container">
                    <div class="col-md-10 col-md-offset-1">
                        <p style="font-family: 'Century Schoolbook L';color: #000000;font-weight: bold;font-size: 20px; word-wrap: break-word;">
                            <%=book.content %>
                        </p>
                    </div>
                </div>
            </div>
